%h1=t '.headline'
- if notice
  %p#notice= notice

= form_tag tally_sheet_update_path, :method => 'put' do
  %table
    %thead
      %tr
        %th= sort_link(@search, :lastname, Person.human_attribute_name(:lastname))
        %th= sort_link(@search, :firstname, Person.human_attribute_name(:firstname))
        - @beverages.each do |beverage|
          %th= "#{beverage.name} (#{beverage.price}/#{beverage.capacity})"
    %tbody 
    - @tabs.each_with_index do |tab,index|
      = fields_for 'tabs' do |form|
        = form.fields_for index.to_s,tab do |tab_form|
          = tab_form.hidden_field :user_id
          %tr
            %td 
              = tab_form.object.user.lastname
            %td 
              = tab_form.object.user.firstname
            = tab_form.fields_for :beverage_tabs, @beverage_tabs[tab.id] do |bf| 
              %td
                = bf.text_field :count, :class => 'text-center'
                = bf.hidden_field :name
                = bf.hidden_field :capacity
                = bf.hidden_field :price
  = submit_tag t('.save'), class: 'button', data: {disable_with: 'Saving...'}

= link_to t('.accounting'), tally_sheet_accounting_path, method: 'post', class: 'button', data: {disable_with: 'Accounting...', confirm: t(".saved")}