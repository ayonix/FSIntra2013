%p= link_to 'Zurück zur Protokollübersicht', minutes_minutes_path

%section
  %h1 #{t @minutes_minute.class.model_name.human} vom #{l @minutes_minute.date}

  - if notice
    %p#notice= notice
  %dl
    %dt= Minutes::Minute.human_attribute_name :keeper_of_the_minutes
    %dd= @minutes_minute.keeper_of_the_minutes
    %dt= Minutes::Minute.human_attribute_name :chairperson
    %dd= @minutes_minute.chairperson
    %dt= Minutes::Minute.human_attribute_name :released_date
    %dd= ldate @minutes_minute.released_date
    %dt= Minutes::Minute.human_attribute_name :attendants
    %dd= @minutes_minute.fsr_attendants.join(", ")
    %dt= Minutes::Minute.human_attribute_name :guests
    %dd= @minutes_minute.guests
    %dt= Minutes::Minute.human_attribute_name :has_quorum
    %dd= @minutes_minute.has_quorum? ? t('views.yep') : t('views.nope')

  - if can? :update, @minutes_minute
    %ul.button-group.highlight-section
      %li
        = link_to small_button(t('actions.edit')), edit_minutes_minute_path(@minutes_minute)
      %li
        = link_to small_button(t('actions.new', model: Minutes::Item.model_name.human)),  new_minutes_minute_item_path(@minutes_minute)

= render partial: 'approvements'

= render partial: "minutes/items/item", collection: @minutes_minute.items, as: :item

%hr

- if can? :send_draft, @minutes_minute
  %p
    = link_to small_button('Entwurf verschicken'), send_draft_minutes_minute_path(@minutes_minute), method: :put
    = link_to small_button('Veröffentlichen'), publish_minutes_minute_path(@minutes_minute), method: :put
    = render partial: "delete_button"
%p= link_to 'Zurück zur Protokollübersicht', minutes_minutes_path