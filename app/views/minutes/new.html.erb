<div class="actions">
  <h1><%=t '.headline' %></h1>
  <%= link_to content_tag(:span, ' Abbrechen', :class => "icon-cancel-1"), minutes_path, :class => "button small round secondary" %>
</div>

<%= form_for(@minute) do |f| %>
  <% if @minute.errors.any? %>
    <div id="error_explanation">
      <h2><%=t 'feedback.form_error', :count => @minute.errors.count %></h2>

      <ul>
      <% @minute.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.datetime_select :date %>
  </div>

  <div class="field">
  	<%= label_tag 'Anzahl' %><br />
  	<%= text_field_tag 'number_of_items', '6' %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to t('actions.back'), minutes_path %>
