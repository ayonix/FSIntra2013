%div.actions
	%h1 Meine Rechnungen

= render 'running_tab', :tab => @running_tab

%h4 Offen
%table
	%colgroup
		%col{:width => "40%"}
		%col{:width => "60%"}
	%thead
		%th Datum
		%th.text-right Betrag
	%tbody
		- @unpaid_tabs.each do |tab|
			%tr 
				%td= link_to tab.created_at.strftime("%d. %B %Y"), tab_path(tab)
				%td.text-right
					= "%.2f" % tab.total_invoice
					&euro;
		%tr
			%th.text-left Rechnungsbetrag gesamt
			%th.text-right
				= "%.2f" % current_user.debts
				&euro;

%h4 Bezahlt
%table
	%colgroup
		%col{:width => "40%"}
		%col{:width => "60%"}
	%thead
		%th Datum
		%th.text-right Betrag
	%tbody
		- @paid_tabs.each do |tab|
			%tr
				%td.text-left= link_to tab.created_at.strftime("%d. %B %Y"), tab_path(tab)
				%td.text-right
					= "%.2f" % tab.total_invoice
					&euro;
					